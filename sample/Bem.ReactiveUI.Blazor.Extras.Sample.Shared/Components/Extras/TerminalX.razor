@using Bem.ReactiveUI.Blazor.Extras.Sample.ViewModels
@inherits ComponentBaseX<Bem.ReactiveUI.Blazor.Extras.Sample.ViewModels.TerminalViewModel>
<Container Class="flash">
    @RenderCountFragment
    <TextEdit Plaintext ReadOnly>Overall Outgoing Passengers: @(From(x => x.ViewModel!.Expected24hOutgoingPassengers))</TextEdit>
    <Tabs TabPosition="TabPosition.Top" RenderMode="TabsRenderMode.LazyLoad">
        <Items>
            <Tab Name="Departures">Departures</Tab>
            <Tab Name="Arrivals">Arrivals</Tab>
        </Items>
        <Content>
            <TabPanel Name="Departures">
                <DeparturesX ViewModel="@(ViewModel!.Departures)"></DeparturesX>
            </TabPanel>
            <TabPanel Name="Arrivals">
                <ArrivalsX ViewModel="@(ViewModel!.Arrivals)"></ArrivalsX>
            </TabPanel>
        </Content>
    </Tabs>
</Container>